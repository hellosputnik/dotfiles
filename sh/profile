# .profile

# Set the HTTP and HTTPS proxy.
# export HTTP_PROXY=
# export HTTPS_PROXY=

# Add dedicated directory for local binaries to PATH.
export PATH="$PATH:$HOME/.local/bin"

# Set Vim as the default editor.
if command -v vim > /dev/null
then
    export EDITOR=vim
    export VISUAL=vim
fi

# Set Neovim as the default editor.
if command -v nvim > /dev/null
then
    export EDITOR=nvim
    export VISUAL=nvim
fi

# Set the ripgrep configuration file path.
export RIPGREP_CONFIG_PATH="$HOME/.ripgreprc"

